<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="5dip" android:color="#7910641B" />
            <gradient android:angle="0" android:startColor="#dc19932d" android:endColor="#d8439e3a" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <stroke android:width="5dip" android:color="#7910641B" />
            <gradient android:angle="0" android:startColor="#dc19932d" android:endColor="#d8439e3a" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="4dip" />
            <gradient android:angle="180" android:startColor="#00C853" android:endColor="#64DD17" />
        </shape>
    </item>
</selector>