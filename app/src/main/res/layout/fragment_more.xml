<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoreFrag"
        tools:ignore="UseCompoundDrawables, HardcodedText, ContentDescription">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_room_24"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:id="@+id/timetableITV"
                    android:text="Расписание"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_room_24"
                    android:drawablePadding="20dp"
                    android:id="@+id/changesITV"
                    android:padding="20dp"
                    android:text="Изменения"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_room_24"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:id="@+id/zvonkiITV"
                    android:text="Звонки"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_room_24"
                    android:drawablePadding="20dp"
                    android:id="@+id/weatherITV"
                    android:padding="20dp"
                    android:text="Погода"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_room_24"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:id="@+id/newsITV"
                    android:text="Новости"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_room_24"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:id="@+id/developersITV"
                    android:text="О разработчиках"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_room_24"
                    android:drawablePadding="20dp"
                    android:id="@+id/feedbackITV"
                    android:padding="20dp"
                    android:text="Оставить отзыв"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>