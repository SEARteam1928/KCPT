<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    tools:context=".ProfileFrag">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UselessParent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:background="@drawable/shape_background"
            android:contentDescription="ic_launcher"
            >

            <TextView
                android:id="@+id/anybodyNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_toEndOf="@+id/profile_icon"
                android:fontFamily="sans-serif"
                android:padding="15sp"
                android:text="Название"
                android:textColor="#FFF"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:id="@+id/profile_icon"
                android:contentDescription="ic_launcher"
                android:src="@drawable/tcp_logo"
                android:padding="15sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                />
        </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables"
        android:layout_width="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:id="@+id/studentProfileBt"
            android:contentDescription="ic_launcher"
            android:src="@drawable/student_icon"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="ВЫБРАТЬ ГРУППУ"
            android:fontFamily="sans-serif"
            android:textColor="#20baf4"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:id="@+id/teacherProfileBt"
            android:contentDescription="ic_launcher"
            android:src="@drawable/teacher_icon"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textColor="#20baf4"
            android:text="ВЫБРАТЬ ПРЕПОДАВАТЕЛЯ"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_margin="20sp"
            android:fontFamily="sans-serif"
            android:id="@+id/setDateBt"
            android:padding="20dp"
            android:visibility="gone"
            android:background="@drawable/my_material_text_background"
            android:text="Выбрать день недели"/>
    </LinearLayout>
</ScrollView>
</RelativeLayout>