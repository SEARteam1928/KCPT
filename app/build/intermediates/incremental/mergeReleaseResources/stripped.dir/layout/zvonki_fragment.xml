<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".timetablefragments.ZvonkiFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mn_fr_tv_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/my_material_text_background"
                android:fontFamily="sans-serif-black"
                android:text="@string/mn_fr_zv"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/st_tv_frag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:layout_margin="5sp"
                android:background="@drawable/my_material_text_background"
                android:fontFamily="sans-serif-black"
                android:text="@string/st_zv"
                android:textAlignment="center"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>