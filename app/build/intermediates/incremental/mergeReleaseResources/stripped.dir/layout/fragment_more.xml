<?xml version="1.0" encoding="utf-8"?>

                                                   

    

           

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoreFrag"
        tools:targetApi="m"
        tools:ignore="UseCompoundDrawables, HardcodedText, ContentDescription" android:tag="layout/fragment_more_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/baseline_event_note_24"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:layout_margin="5dp"
                    android:textColor="#FFF"
                    android:drawableTint="#FFF"
                    android:background="@drawable/my_material_text_background"
                    android:id="@+id/timetableITV"
                    android:text="Расписание"
                    android:textSize="20sp"
                   />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@android:drawable/ic_menu_day"
                    android:drawablePadding="20dp"
                    android:id="@+id/changesITV"
                    android:padding="20dp"
                    android:textColor="#FFF"
                    android:layout_margin="5dp"
                    android:drawableTint="#FFF"
                    android:background="@drawable/my_material_text_background"
                    android:text="Изменения"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@android:drawable/ic_menu_recent_history"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:textColor="#FFF"
                    android:layout_margin="5dp"
                    android:drawableTint="#FFF"
                    android:background="@drawable/my_material_text_background"
                    android:id="@+id/zvonkiITV"
                    android:text="Звонки"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@android:drawable/ic_menu_mapmode"
                    android:drawablePadding="20dp"
                    android:id="@+id/weatherITV"
                    android:textColor="#FFF"
                    android:layout_margin="5dp"
                    android:drawableTint="#FFF"
                    android:background="@drawable/my_material_text_background"
                    android:padding="20dp"
                    android:text="Погода"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@android:drawable/btn_star_big_off"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:visibility="gone"
                    android:textColor="#FFF"
                    android:layout_margin="5dp"
                    android:drawableTint="#FFF"
                    android:background="@drawable/my_material_text_background"
                    android:id="@+id/newsITV"
                    android:text="Новости"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="20dp"
                    android:padding="20dp"
                    android:textColor="#FFF"
                    android:drawableTint="#FFF"
                    android:background="@drawable/my_material_text_background"
                    android:layout_margin="5dp"
                    android:id="@+id/developersITV"
                    android:text="О разработчиках"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@android:drawable/ic_menu_edit"
                    android:drawablePadding="20dp"
                    android:id="@+id/feedbackITV"
                    android:textColor="#FFF"
                    android:drawableTint="#FFF"
                    android:background="@drawable/my_material_text_background"
                    android:layout_margin="5dp"
                    android:padding="20dp"
                    android:text="Оставить отзыв"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
         